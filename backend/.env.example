# Database Configuration
DB_HOST=localhost
DB_PORT=PORT #đổi thành PORT mà mình dùng
DB_USER=root
DB_PASSWORD=PASS #đổi thành PASS mà mình dùng
DB_NAME=flowershop_mysql

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000  # Đổi port backend server (mặc định: 5000)
NODE_ENV=development

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (Optional for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SePay API (use either one)
SEPAY_API_KEY=your_sepay_api_token
# or
SEPAY_API_TOKEN=your_sepay_api_token
