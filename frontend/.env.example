# Frontend environment variables

# ========================================
# Frontend Server Configuration
# ========================================
PORT=3000  # Đổi port React app (mặc định: 3000, có thể đổi thành 3001, 4000, v.v.)

# ========================================
# API Configuration
# ========================================
# API base URL - Phải khớp với backend PORT
REACT_APP_API_URL=http://localhost:5000/api  # Nếu backend port 3001 → http://localhost:3001/api
REACT_APP_BASE_URL=http://localhost:3000     # Phải khớp với PORT frontend ở trên

# ========================================
# Image Upload Configuration
# ========================================
# FreeImage.host API key for image uploads (recommended)
# Get your free API key at: https://freeimage.host/page/api
REACT_APP_FREEIMAGE_KEY=your_freeimage_api_key_here

# ImgBB API key (Legacy - deprecated, use FreeImage instead)
REACT_APP_IMGBB_KEY=your_imgbb_api_key_here

# ========================================
# Payment Configuration (SePay)
# ========================================
REACT_APP_SEPAY_ACC=
REACT_APP_SEPAY_BANK=
REACT_APP_SEPAY_TEMPLATE=
REACT_APP_SEPAY_DOWNLOAD=

# ========================================
# Webpack Dev Server Configuration
# ========================================
# Fix allowedHosts error in development
DANGEROUSLY_DISABLE_HOST_CHECK=true
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000  # Phải khớp với PORT ở trên
